@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>Személyes adatok törlése</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>A személyes adatainak törlésével a felhasználói fiókja is törlésre kerül. A törölt adatok helyreállítására és a fiókja feloldására sem lesz lehetősége. Amennyiben végrehajtja a műveletet minden az ön fiókjához köthető ügy, megjegyzés valamint értesítés is törlésre kerül.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Személyes adataim és a felhasználói fiókomhoz tartozó adatok törlése</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}