@model CaseHandler.WebApplication.Models.RequestModels.CreateCommentRequestModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Megjegyzés létrehozása</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <input asp-for="CaseId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.back()">Vissza az előző oldalra</a>
</div>