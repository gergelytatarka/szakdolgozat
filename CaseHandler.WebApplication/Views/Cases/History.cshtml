@model CaseHandler.WebApplication.Models.ViewModels.HistoryViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Az @Model.CaseNumber ügyhöz tartozó korábbi események</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HistoryItems[0].CreatedByUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistoryItems[0].Entry)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HistoryItems)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.CreatedByUserName)</b><br />
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entry)
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="javascript:history.back()">Vissza az előző oldalra</a>
